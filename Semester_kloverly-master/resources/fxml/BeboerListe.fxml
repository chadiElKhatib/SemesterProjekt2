<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="550.0" prefWidth="750.0"
            style="-fx-background-color: radial-gradient(center 50% 50%, radius 80%, #2a4d44 0%, #1a3c34 100%);"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Kløverly.presentation.controllers.BeboerListeController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="30.0">
            <children>
                <VBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Label text="Beboer Oversigt" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="34.0" />
                            </font>
                            <style>-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 0);</style>
                        </Label>
                        <Label text="Administrer beboere og se deres personlige point" textFill="WHITE" opacity="0.9">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <ListView fx:id="liste" prefHeight="380.0" prefWidth="670.0"
                          style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 15; -fx-padding: 10;"
                          VBox.vgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-background-color: rgba(0,0,0,0.3); -fx-padding: 15; -fx-background-radius: 15;">
                    <children>
                        <Button fx:id="gemKnap" mnemonicParsing="false" onAction="#handleRediger" prefHeight="45.0" prefWidth="150.0"
                                style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="REDIGER BEBOER" />

                        <Button fx:id="lukKnap" mnemonicParsing="false" onAction="#handleSlet" prefHeight="45.0" prefWidth="130.0"
                                style="-fx-background-color: #ff5e57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="SLET" />

                        <Button mnemonicParsing="false" onAction="#handleTilbage" prefHeight="45.0" prefWidth="110.0"
                                style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" text="Tilbage" />
                    </children>
                </HBox>

                <Label opacity="0.8" text="Vælg en beboer i listen for at redigere oplysninger eller slette fra systemet." textFill="WHITE">
                    <font>
                        <Font name="System Italic" size="13.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>