<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="700.0" spacing="40.0"
      style="-fx-background-color: radial-gradient(center 50% 50%, radius 80%, #2a4d44 0%, #1a3c34 100%);"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Kløverly.presentation.controllers.HomeMenuController">
    <padding>
        <Insets bottom="50.0" left="60.0" right="60.0" top="50.0" />
    </padding>

    <children>
        <VBox alignment="CENTER" spacing="12.0">
            <children>
                <Label text="Velkommen til Kløverly" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="38.0" />
                    </font>
                    <style>-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 0);</style>
                </Label>
                <Label text="Dit overblik over opgaver, point og fællesskabet" textFill="WHITE" opacity="0.9">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <GridPane alignment="CENTER" hgap="30.0" vgap="25.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="OpretBeboer" maxWidth="Infinity" onAction="#handleOpretBeboer" prefHeight="55.0"
                        style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"
                        text="OPRET BEBOER" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                <Button fx:id="SeBeboerListe" maxWidth="Infinity" onAction="#handleBeboerListe" prefHeight="55.0"
                        style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"
                        text="SE BEBOER LISTE" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Button fx:id="opretOpgave" maxWidth="Infinity" onAction="#handleOpretOpgaver" prefHeight="55.0"
                        style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"
                        text="OPRET OPGAVER" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Button fx:id="SeOpgaveListe" maxWidth="Infinity" onAction="#handleVisOpgaveListe" prefHeight="55.0"
                        style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;"
                        text="SE OPGAVE LISTE" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Button fx:id="pointsystem" maxWidth="Infinity" onAction="#pointSystem" prefHeight="70.0"
                        style="-fx-background-color: #90EE90; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 15; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);"
                        text="POINTSYSTEM DASHBOARD" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </children>
        </GridPane>

        <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="LukProgrammet" onAction="#handleLuk" prefHeight="40.0" prefWidth="140.0"
                        style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 10; -fx-cursor: hand;"
                        text="Log ud / Luk" />
            </children>
        </HBox>
    </children>
</VBox>