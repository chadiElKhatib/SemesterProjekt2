<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="520.0" spacing="20.0"
      style="-fx-background-color: radial-gradient(center 50% 50%, radius 80%, #2a4d44 0%, #1a3c34 100%);"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Kløverly.presentation.controllers.OpretOpgaveController">

    <padding><Insets bottom="40" left="50" right="50" top="40" /></padding>

    <children>
        <Label text="Opret Ny Opgave" textFill="WHITE">
            <font><Font name="System Bold" size="32.0" /></font>
            <style>-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 0);</style>
            <VBox.margin><Insets bottom="10" /></VBox.margin>
        </Label>

        <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label text="Vælg kategori" textFill="WHITE" style="-fx-font-weight: bold;">
                <font><Font size="14.0" /></font>
            </Label>
            <ComboBox fx:id="kategoriValg" prefHeight="40.0" prefWidth="420.0" promptText="Vælg opgavetype..."
                      style="-fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label text="Titel" textFill="WHITE" style="-fx-font-weight: bold;">
                <font><Font size="14.0" /></font>
            </Label>
            <TextField fx:id="titelFelt" prefHeight="40.0" prefWidth="420.0" promptText="Indtast opgavens titel her..."
                       style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="8.0">
            <Label text="Beskrivelse" textFill="WHITE" style="-fx-font-weight: bold;">
                <font><Font size="14.0" /></font>
            </Label>
            <TextArea fx:id="beskrivelseFelt" prefHeight="120.0" prefWidth="420.0"
                      promptText="Skriv en kort beskrivelse af opgaven..." wrapText="true"
                      style="-fx-control-inner-background: #1a3c34; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
        </VBox>

        <VBox alignment="CENTER" spacing="12.0" style="-fx-background-color: rgba(0,0,0,0.3); -fx-padding: 20; -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 20;">
            <Label fx:id="sliderVærdiLabel" text="Point: 10" textFill="#90EE90">
                <font><Font name="System Bold" size="22.0" /></font>
            </Label>
            <Slider fx:id="pointSlider" majorTickUnit="20.0" max="100.0" min="0.0"
                    showTickLabels="true" showTickMarks="true" value="10.0" maxWidth="380.0"
                    style="-fx-tick-label-fill: white;" />
        </VBox>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="GemOpgave" onAction="#handleGem" prefHeight="50.0" prefWidth="150.0"
                        style="-fx-background-color: #90EE90; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);"
                        text="GEM OPGAVE" />
                <Button onAction="#handleAnnuller" prefHeight="50.0" prefWidth="120.0"
                        style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white; -fx-background-radius: 12; -fx-cursor: hand;" text="Annuller" />
                <Button onAction="#handleTilbage" prefHeight="50.0" prefWidth="120.0"
                        style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white; -fx-background-radius: 12; -fx-cursor: hand;" text="Tilbage" />
            </children>
            <VBox.margin><Insets top="15" /></VBox.margin>
        </HBox>
    </children>
</VBox>