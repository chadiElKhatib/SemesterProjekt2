<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="600.0" maxWidth="900.0" minHeight="500.0" minWidth="850.0" prefHeight="550.0" prefWidth="880.0"
          style="-fx-background-color: #1a3c34; -fx-padding: 20;"
          xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Kløverly.presentation.controllers.pointcontroller">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="380.0" prefWidth="390.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="450.0" prefWidth="480.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <VBox alignment="TOP_CENTER" spacing="25.0" GridPane.hgrow="NEVER" GridPane.vgrow="ALWAYS">
        <children>
            <Label alignment="CENTER" text="Kløverly Point System" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>

            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 15; -fx-padding: 20;">
                <children>
                    <Label text="Fælles pulje" textFill="WHITE">
                        <font>
                            <Font size="22.0" />
                        </font>
                    </Label>
                    <Label fx:id="fællespointLabel" text="307 Point" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="56.0" />
                        </font>
                    </Label>
                    <ProgressBar fx:id="fællesProgressBar" minHeight="25.0" prefWidth="320.0" progress="0.61"
                                 style="-fx-accent: #90EE90;" />
                    <Label text="Fælles mål: 500 point" textFill="WHITE">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label fx:id="milepælLabel" text="Sidst ramt 500 point: 18-12-2025" textFill="WHITE" opacity="0.7">
                        <font>
                            <Font name="System Italic" size="13.0" />
                        </font>
                    </Label>
                </children>
            </VBox>

            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                <children>
                    <Button mnemonicParsing="false" onAction="#handleTilbage" prefHeight="40.0" prefWidth="100.0" text="Tilbage" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" />
                </VBox.margin>
            </VBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="15.0" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS"
          style="-fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 15; -fx-padding: 15;">
        <children>
            <Label text="Personlige puljer" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Label>

            <TableView fx:id="beboerPointTabel" prefHeight="380.0" prefWidth="450.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="navnKolonne" prefWidth="225.0" reorderable="false" text="Navn" />
                    <TableColumn fx:id="pointKolonne" prefWidth="210.0" reorderable="false" text="Point" />
                </columns>
            </TableView>

            <Label alignment="CENTER" opacity="0.8" text="Point opdateres automatisk når opgaver godkendes." textFill="WHITE" wrapText="true">
                <font>
                    <Font name="System Italic" size="12.0" />
                </font>
            </Label>
        </children>
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="10.0" />
        </padding>
        <GridPane.margin>
            <Insets left="10.0" />
        </GridPane.margin>
    </VBox>
</GridPane>