<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="TOP_CENTER" hgap="30" vgap="20"
          style="-fx-background-color: radial-gradient(center 50% 50%, radius 70%, #2a4d44 0%, #1a3c34 100%); -fx-padding: 40;"
          xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Kløverly.presentation.controllers.OpgaveListeController">

    <Label alignment="CENTER" text="Opgave Oversigt" textFill="WHITE" GridPane.columnSpan="3" GridPane.rowIndex="0">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
        <GridPane.margin>
            <Insets bottom="30.0" />
        </GridPane.margin>
        <style>
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);
        </style>
    </Label>

    <VBox alignment="TOP_CENTER" spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Label text="Grønne Opgaver" textFill="#90EE90">
            <font><Font name="System Bold" size="22.0" /></font>
        </Label>
        <ListView fx:id="grønneOpgaverListe" minHeight="450" minWidth="280"
                  style="-fx-background-color: rgba(255,255,255,0.03); -fx-background-radius: 15; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 15;" VBox.vgrow="ALWAYS" />
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Label text="Bytte Opgaver" textFill="WHITE">
            <font><Font name="System Bold" size="22.0" /></font>
        </Label>
        <ListView fx:id="bytteOpgaverListe" minHeight="450" minWidth="280"
                  style="-fx-background-color: rgba(255,255,255,0.03); -fx-background-radius: 15; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 15;" VBox.vgrow="ALWAYS" />
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="15" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Label text="Klima Opgaver" textFill="#a2d2ff">
            <font><Font name="System Bold" size="22.0" /></font>
        </Label>
        <ListView fx:id="klimaOpgaverListe" minHeight="450" minWidth="280"
                  style="-fx-background-color: rgba(255,255,255,0.03); -fx-background-radius: 15; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 15;" VBox.vgrow="ALWAYS" />
    </VBox>

    <HBox alignment="CENTER" spacing="25" GridPane.columnSpan="3" GridPane.rowIndex="2"
          style="-fx-background-color: rgba(0,0,0,0.4); -fx-padding: 25; -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.05); -fx-border-radius: 20;">
        <GridPane.margin>
            <Insets top="35.0" />
        </GridPane.margin>

        <Label text="Giv point til:" textFill="WHITE">
            <font><Font name="System Bold" size="16.0" /></font>
        </Label>

        <ComboBox fx:id="beboerValgCombo" prefHeight="40.0" prefWidth="250.0" promptText="Vælg beboer fra fællesskabet..."
                  style="-fx-background-radius: 8;" />

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="gemKnap" onAction="#handleGodkend" prefHeight="45.0" prefWidth="120.0"
                    style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="GODKEND" />

            <Button fx:id="lukKnap" onAction="#handleSlet" prefHeight="45.0" prefWidth="100.0"
                    style="-fx-background-color: #ff5e57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="SLET" />

            <Button onAction="#handleTilbage" prefHeight="45.0" prefWidth="100.0"
                    style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" text="TILBAGE" />
        </HBox>
    </HBox>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="NEVER" />
    </rowConstraints>

</GridPane>