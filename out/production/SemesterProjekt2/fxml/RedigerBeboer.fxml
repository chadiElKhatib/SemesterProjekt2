<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0"
      style="-fx-background-color: radial-gradient(center 50% 50%, radius 80%, #2a4d44 0%, #1a3c34 100%); -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15;"
      xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Kløverly.presentation.controllers.RedigerBeboerController">

    <padding>
        <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
    </padding>

    <children>
        <VBox alignment="CENTER" spacing="5.0">
            <children>
                <Label text="Rediger Profil" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <style>-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 0);</style>
                </Label>
                <Label text="Opdater oplysninger for beboeren" textFill="WHITE" opacity="0.9">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </VBox>

        <VBox alignment="CENTER_LEFT" maxWidth="300.0" spacing="15.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Navn" textFill="WHITE" style="-fx-font-weight: bold;">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <TextField fx:id="navnField" prefHeight="40.0" promptText="Indtast fulde navn"
                                   style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Telefon" textFill="WHITE" style="-fx-font-weight: bold;">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <TextField fx:id="telefonField" prefHeight="40.0" promptText="Indtast nummer..."
                                   style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Fødselsdag" textFill="WHITE" style="-fx-font-weight: bold;">
                            <font><Font size="14.0" /></font>
                        </Label>
                        <DatePicker fx:id="fødselsdato" maxWidth="Infinity" prefHeight="40.0" promptText="Vælg dato"
                                    style="-fx-background-radius: 10; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 10;" />
                    </children>
                </VBox>
            </children>
        </VBox>

        <Label fx:id="statusLabel" textFill="#ffd700">
            <font>
                <Font name="System Italic" size="13.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="gemKnap" minWidth="110.0" onAction="#handleGem" prefHeight="45.0"
                        style="-fx-background-color: white; -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;" text="GEM" />

                <Button fx:id="lukKnap" minWidth="110.0" onAction="#handleAnnuller" prefHeight="45.0"
                        style="-fx-background-color: #ff5e57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-cursor: hand;" text="ANNULLER" />
            </children>
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>