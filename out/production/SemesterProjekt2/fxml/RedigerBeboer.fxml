<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Kløverly.presentation.controllers.RedigerBeboerController">

    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="Rediger beboer">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <Label text="Navn" />
        <TextField fx:id="navnField" prefWidth="250.0" />

        <Label text="Telefon" />
        <TextField fx:id="telefonField" prefWidth="250.0" />

        <Label text="Fødselsdag" />
        <DatePicker fx:id="fødselsdato" prefWidth="250.0" />

        <Label fx:id="statusLabel" />

        <HBox spacing="10">
            <children>
                <Button onAction="#handleGem" text="Gem" />
                <Button onAction="#handleAnnuller" text="Annuller" />
            </children>
        </HBox>
    </children>
</VBox>
