<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Kløverly.presentation.controllers.OpretOpgaveController">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label text="Opret Ny Opgave">
        <font><Font size="22.0" /></font>
    </Label>

    <Label text="Vælg kategori:" />
    <ComboBox fx:id="kategoriValg" prefWidth="300.0" promptText="Vælg opgavetype..." />

    <TextField fx:id="titelFelt" maxWidth="300.0" promptText="Opgavens titel" />

    <TextArea fx:id="beskrivelseFelt" maxWidth="300.0" prefHeight="100.0" promptText="Beskriv opgaven her..." />

    <Button fx:id="GemOpgave" onAction="#handleGem" style="-fx-background-color: lightgreen;" text="Gem Opgave" />
    <Button onAction="#handleTilbage" text="Annulle" />

</VBox>
